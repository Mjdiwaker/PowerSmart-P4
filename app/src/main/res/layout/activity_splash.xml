<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#23BEDD">

    <ImageView
        android:id="@+id/iv_splash_off"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="fitXY"
        android:src="@drawable/splashon1"
        android:visibility="visible" />


    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="@dimen/dp10"
        android:layout_gravity="bottom|center"
        app:indicatorColor="@color/white"
        app:indicatorName="BallPulseIndicator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="@dimen/dp1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_splash_on"
                android:layout_width="@dimen/dp70"
                android:layout_height="@dimen/dp70"
                android:layout_marginLeft="@dimen/dp10"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_plug_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp15"
                android:gravity="center"
                android:text="PlugSmart"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dp40" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_plug_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp10"
            android:text="Rejuvenating Life..."
            android:textColor="@android:color/white"
            android:textSize="@dimen/dp38"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>